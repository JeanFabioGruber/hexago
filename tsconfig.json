{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true    
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["tests/**/*.test.ts"]

}
